<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".login.Activitylogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Here you can put your logo or brand name -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:src="@drawable/login_logo" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_NID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editText_NID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
               android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="الرقم القومى"
                android:fontFamily="@font/hacen"
                android:textColorHint="#000"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginTop="10dp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/hacen"
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>


            <CheckBox
                android:id="@+id/Remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/color3"
                android:fontFamily="@font/shorooq"
                android:text="تذكرنى"
                android:padding="8dp"/>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color5"
                android:text="دخول"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:fontFamily="@font/hacen"
                android:padding="16dp"
                android:clickable="true"

                android:layout_marginTop="24dp"
                android:textSize="18sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sign_up"
                android:background="@color/color6"
                android:text="مستخدم جديد"
                android:fontFamily="@font/hacen"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:id="@+id/lostpassword_link"
                android:clickable="true"
                android:linksClickable="true"
                android:fontFamily="@font/shorooq"
                android:padding="16dp"
                android:text="نسيت كلمة السر ؟"
                android:textColor="@color/color3"
                android:textStyle="normal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>